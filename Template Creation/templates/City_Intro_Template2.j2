{%- macro intro(city_name,country_name,state_name,continent_name,area,
			population,population_acc_to_year,is_state_capital,is_country_capital,
			other_names,GWCR_ranking) -%}
	

	{%- set continent_line=[
						'ఈ నగరం '+ continent_name +' అనే ఖండంలో ఉన్నది.',
						'ఇది '+continent_name+' ఖండానికి చందిన నగరం.'
					] | random
	-%}

	{%- set area_line=[
						city_name + ' ' + area +' చదరపు కిలోమీటర్ల విస్తీర్ణంలో ఉంది.',
						city_name + ' సుమారు '+ area + ' చదరపు కిలోమీటర్ల విస్తీర్ణంలో ఉంది.',
						city_name+ ' ' +  area + ' చదరపు కిలొమీటర్ల వైశాల్యం కలిగి ఉంది.',
						'దీని విస్తీర్ణత '+ area +' చదరపు కిలోమీటర్లు.' 
						] | random
	-%}

	{%- set population_line=[
						 population_acc_to_year + ' సంవత్సరం నాటికి ఇక్కడి జనాభా ' + population + '. '
					] | random
	-%}

	{{city_name}} నగరం {{country_name}}లో {%- if state_name!= "నోణి"-%}ని {{state_name}} రాష్ట్రంలో {%- endif %} ఉంది.
	{%- if is_state_capital and not is_country_capital and state_name!= "నోణి"-%}
		{{city_name}} {{state_name}}కి రాష్ట్ర రాజధాని.
	{%- elif not is_state_capital and is_country_capital and state_name!= "నోణి"-%}
 		{{city_name}} {{country_name}}కి దేశ రాజధాని.
    {%- elif is_state_capital and is_country_capital and state_name!= "నోణి"-%}
		{{city_name}} {{state_name}}కి రాష్ట్ర  రాజధాని తో పాటు {{country_name}}కి రాజధాని కూడా.
    {%- endif -%} {{continent_line}} {{area_line}} {{population_line}} 

    {%- if other_names !="నోణి"-%}
    {{city_name}}ని "{{other_names}}" అని కూడా పిలుస్తారు. 
    {%- endif -%}
	
	{%- if GWCR_ranking != "నోణి" -%}
	గ్లోబలైజేషన్ అండ్ వరల్డ్ సిటీస్ రీసెర్చ్ నెట్ వర్క్ ప్రకారం, ఈ నగర హోదా {{GWCR_ranking}}- గ గుర్తించబడినది. 
	{%- endif -%}
{%- endmacro -%}

